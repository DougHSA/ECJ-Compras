@model ECJ_Compras.Dto.LoginDto

@{
    ViewData["Title"] = "Login";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: midnightblue;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        html, body {
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
        .titulo1 {
            margin:0;
            font-size: 15px;
            color: goldenrod;
            text-wrap: nowrap;
            opacity: 0.1;
        }

        .titulo2 {
            margin-top: 7px;
            font-family: 'Alishba Regular';
            font-size: 25px;
            color: goldenrod;
            text-wrap: nowrap;
            opacity: 0.1;
        }

        .login-container {
            position: relative;
            background-color: goldenrod;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.9);
            width: 300px;
            z-index:2;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button {
            width: 100%;
            background-color: midnightblue;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        .titulo {
            display: flex;
            flex-direction: column;
            position: absolute;
            transform: rotateZ(-45deg);
            z-index: 1;
        }

        #pagina{
            position: relative;
            overflow: hidden;
            width: 100vw; /* Largura da janela do navegador */
            height: 100vh; /* Altura da janela do navegador */
        }

        .text-center{
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<div id="pagina">
    @*<div class="titulo" id="titulo" style="top:30;left:10;">
        <h2 class="titulo1">EJC</h2>
        <h1 class="titulo2">Dom Bosco</h1>
    </div>*@

    <div class="text-center">
        <div class="login-container">
            <h2 style="color:azure;">Login</h2>
            <form action="/Login" method="post">
                <input type="text" name="Usuario" placeholder="Usuario" required id="Usuario">
                <input type="password" name="Senha" placeholder="Senha" required id="Senha">
                <button type="submit">Entrar</button>
            </form>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const pagina = document.getElementById("pagina");

        const numDivsRow = 8;
        const numDivsColumn = 17;

        for (let i = 0; i < numDivsRow; i++) {
            for (let j = 0; j < numDivsColumn; j++) {
                const div = document.createElement("div");
                div.classList.add("titulo");

                div.style.top = (i * 30 + 100 * i); // Ajuste a distância vertical
                div.style.left = (j * 20 + 100 * j); // Ajuste a distância horizontal

                const h2 = document.createElement("h2");
                h2.classList.add("titulo1");
                h2.textContent = "EJC";

                const h1 = document.createElement("h1");
                h1.classList.add("titulo2");
                h1.textContent = "Dom Bosco";

                div.appendChild(h2);
                div.appendChild(h1);

                pagina.appendChild(div);
            }
        }
    });
</script>